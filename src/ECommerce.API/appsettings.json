{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=ECommerceDb;User Id=sa;Password=ECom1234;TrustServerCertificate=True;"
  },

  "Jwt": {
    "Key": "SuperSecretKeyForProduction12345678901234567890!!",
    "Issuer": "ECommerceAPI",
    "Audience": "ECommerceClient"
  },

  "AppSettings": {
    "BaseUrl": "https://localhost:5001",
    "JwtExpirationInMinutes": 60,
    "EmailSettings": {
      "SmtpHost": "smtp.mailtrap.io",
      "SmtpPort": 587,
      "SmtpUser": "YOUR_MAILTRAP_USER",
      "SmtpPass": "",
      "FromEmail": "no-reply@example.com",
      "FromName": "E-Commerce",
      "UsePickupFolder": false,
      "PickupDirectory": null
    }
  },

  "Database": {
    "UseSqlite": false,
    "SqlitePath": "app.db"
  },

  "Payment": { "Provider": "Stripe" },
  "PaymentSettings": {
    "IyzicoApiKey": "",
    "IyzicoSecretKey": "",
    "IyzicoBaseUrl": "https://api.iyzico.com/",
    "IyzicoCallbackUrl": "https://yourdomain.com/api/payments/iyzico/callback",
    "PayPalClientId": "",
    "PayPalSecret": "",
    "PayPalBaseUrl": "https://api.paypal.com/",
    "StripeSecretKey": "",
    "StripePublishableKey": "",
    "StripeWebhookSecret": "",
    "ReturnUrlSuccess": "https://yourdomain.com/checkout/success",
    "ReturnUrlCancel": "https://yourdomain.com/checkout/cancel"
  },

  "MikroSettings": {
    "ApiUrl": "http://localhost:7001/",
    "ApiKey": "",
    "ApiSecret": ""
  },

  "OAuth": {
    "AllowDevSocialLogin": true,
    "GoogleClientId": "",
    "FacebookAppId": "",
    "FacebookAppSecret": ""
  },
  "Cors": {
    "AllowedOrigins": ["http://localhost:3000", "http://localhost:3001"]
  },
  "Admin": {
    "Email": "admin@local",
    "Password": ""
  },
  "Inventory": {
    "CriticalStockThreshold": 5,
    "StockSyncIntervalSeconds": 60,
    "ReservationExpiryMinutes": 15,
    "ReservationCleanupIntervalSeconds": 60
  }
}
