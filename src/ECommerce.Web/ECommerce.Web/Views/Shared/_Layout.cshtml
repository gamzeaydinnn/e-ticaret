<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EliteShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerce.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="elite-header">
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-2">
            <div class="container-fluid px-4">
                <!-- Sol Taraf: Logo -->
                <a class="navbar-brand d-flex align-items-center me-4" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="logo-circle bg-danger text-white d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px; border-radius: 8px;">
                        <span class="fw-bold fs-5">E</span>
                    </div>
                    <div>
                        <h5 class="mb-0 text-dark fw-bold">EliteShop</h5>
                        <small class="text-muted" style="font-size: 0.75rem;">Premium Store</small>
                    </div>
                </a>

                <!-- Orta: Navigasyon Menüsü -->
                <div class="navbar-nav mx-auto d-none d-lg-flex">
                    <a class="nav-link fw-medium px-3 text-dark" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                    <a class="nav-link fw-medium px-3 text-dark" href="#">Kategoriler</a>
                    <a class="nav-link fw-medium px-3 text-dark" href="#">İndirimler</a>
                    <a class="nav-link fw-medium px-3 text-dark" href="#">Yeni Gelenler</a>
                    <a class="nav-link fw-medium px-3 text-dark" href="#">İletişim</a>
                </div>

                <!-- Sağ Taraf: Arama ve Aksiyon Butonları -->
                <div class="d-flex align-items-center">
                    <!-- Arama Çubuğu -->
                    <form class="d-flex me-3" style="min-width: 280px;">
                        <div class="input-group">
                            <input class="form-control border-0 bg-light rounded-start" type="search" placeholder="Hangi ürünü arıyorsunuz?" aria-label="Search" style="font-size: 0.9rem;">
                            <button class="btn btn-light border-0 rounded-end text-muted" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>

                    <!-- Favoriler -->
                    <a href="#" class="me-3 position-relative text-decoration-none">
                        <i class="fas fa-heart fa-lg text-muted"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.65rem;">2</span>
                    </a>

                    <!-- Hesabım -->
                    <div class="dropdown me-3">
                        <a href="#" class="text-decoration-none text-dark dropdown-toggle d-flex align-items-center" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i>
                            <span class="fw-medium">Hesabım</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#">Giriş Yap</a></li>
                            <li><a class="dropdown-item" href="#">Kayıt Ol</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Profilim</a></li>
                            <li><a class="dropdown-item" href="#">Siparişlerim</a></li>
                        </ul>
                    </div>

                    <!-- Sepet -->
                    <a href="#" class="btn btn-danger position-relative d-flex align-items-center">
                        <i class="fas fa-shopping-cart me-2"></i>
                        Sepet
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-warning text-dark" style="font-size: 0.65rem;">3</span>
                    </a>

                    <!-- Mobile Menu Toggle -->
                    <button class="navbar-toggler border-0 ms-2 d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <!-- Mobile Navigation -->
                <div class="collapse navbar-collapse d-lg-none" id="navbarNav">
                    <ul class="navbar-nav mt-3">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">Kategoriler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">İndirimler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">Yeni Gelenler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">İletişim</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ECommerce.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
